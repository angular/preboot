{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ],
  "files": [
    "src/index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "flatModuleId": "preboot",
    "strictMetadataEmit": true
  }
}
